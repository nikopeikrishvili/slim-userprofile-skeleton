{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Sign up</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
                        <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.firstname ? ' has-error' : '' }}">
                            <label for="name">Name</label>
                            <input type="text" name="firstname" id="firstname" class="form-control" value="{{ old.firstname }}">
                            {% if errors.firstname %}
                                <span class="help-block">{{ errors.firstname | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.lastname ? ' has-error' : '' }}">
                            <label for="name">Name</label>
                            <input type="text" name="lastname" id="lastname" class="form-control" value="{{ old.lastname }}">
                            {% if errors.lastname %}
                                <span class="help-block">{{ errors.lastname | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-control">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Sign up</button>

                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
